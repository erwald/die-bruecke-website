---
pages:
  - {name: Releases, url: /releases}
  - {name: Manifesto, url: /manifesto}
  - {name: Bandcamp, url: https://bruecke.bandcamp.com/}
  - {name: Facebook, url: https://www.facebook.com/brueckemusic}
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metadata.title }} - {{ title or 'a Digital and Tape Record Label' }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
    <img src="/img/die_bruecke_2.png" alt="Die BrÃ¼cke" width="200px" />
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <ul class="nav">
        {%- for page in pages -%}
        <li class="page-item{% if page.url == page.url %} page-item-active{% endif %}">
          <a href="{{ page.url | url }}">{{ page.name }}</a>
        </li>
        {%- endfor -%}
      </ul>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer></footer>
  </body>
</html>